---
import '../styles/global.css';
import { useTranslations, getHtmlLang } from '../i18n/utils';
import type { Locale } from '../i18n/translations';
import dmSansLatin from '../assets/fonts/dm-sans-latin.woff2';
import sourceSerifLatin from '../assets/fonts/source-serif-4-latin.woff2';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const { title, description } = t.meta;
const htmlLang = getHtmlLang(lang);

const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(`${base}og-image.png`, Astro.site);

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Pedro Monteiro",
  "url": new URL(base, Astro.site).href,
  "email": "pedrocsmonteiro@gmail.com",
  "jobTitle": "Full-Stack Engineer",
  "address": { 
    "@type": "PostalAddress", 
    "addressLocality": "SÃ£o Paulo", 
    "addressRegion": "SP", 
    "addressCountry": "BR" 
  },
  "sameAs": [
    "https://linkedin.com/in/pedrocsmonteiro", 
    "https://github.com/peda-cos"
  ]
};
---

<!DOCTYPE html>
<html lang={htmlLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="profile" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Font Preloads (subsetted, self-hosted) -->
    <link rel="preload" as="font" type="font/woff2" href={dmSansLatin} crossorigin />
    <link rel="preload" as="font" type="font/woff2" href={sourceSerifLatin} crossorigin />

    <!-- Alternate Links -->
    <link rel="alternate" hreflang="pt-BR" href={new URL(base, Astro.site).href} />
    <link rel="alternate" hreflang="en" href={new URL(`${base}en/`, Astro.site).href} />
    <link rel="alternate" hreflang="x-default" href={new URL(base, Astro.site).href} />

    <!-- JSON-LD -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>
  <body>
    <slot />
  </body>
</html>
