---
import { type Locale, t } from '../i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
const cvUrl = `/${locale}/cv/`;

const links = [
  {
    href: 'mailto:pedrocsmonteiro@gmail.com',
    label: i.contact.email,
    icon: 'email',
    external: false,
    download: false,
  },
  {
    href: 'https://linkedin.com/in/pedrocsmonteiro',
    label: i.contact.linkedin,
    icon: 'linkedin',
    external: true,
    download: false,
  },
  {
    href: 'https://github.com/peda-cos',
    label: i.contact.github,
    icon: 'github',
    external: true,
    download: false,
  },
  {
    href: cvUrl,
    label: i.contact.downloadCV,
    icon: 'download',
    external: true,
    download: false,
  },
];
---

<section id="contact" class="section section-alt" aria-labelledby="contact-heading">
  <div class="container max-w-[48rem]">
    <h2 id="contact-heading" class="text-[length:var(--font-size-headline-lg)] font-bold text-[color:var(--color-on-surface)] dark:text-[color:var(--color-dark-on-surface)]">
      {i.contact.heading}
    </h2>
    <p class="mt-[var(--spacing-md)] text-[length:var(--font-size-body-lg)] text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
      {i.contact.subtitle}
    </p>
    <ul class="mt-[var(--spacing-2xl)] space-y-[var(--spacing-md)]" role="list">
      {links.map((link) => (
        <li>
          <a
            href={link.href}
            class="card inline-flex w-full items-center gap-[var(--spacing-md)] no-underline transition-[opacity,scale] duration-[var(--duration-fast)] hover:opacity-90 hover:scale-[1.01] active:scale-[0.99]"
            {...(link.external ? {
              target: '_blank',
              rel: 'noopener noreferrer',
            } : {})}
            {...(link.download ? { download: true } : {})}
            aria-label={link.external ? `${link.label} (${i.contact.opensInNewTab})` : link.label}
          >
            <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded-[var(--radius-md)] bg-[var(--color-primary-container)] dark:bg-[var(--color-dark-primary-container)]" aria-hidden="true">
              {link.icon === 'email' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[color:var(--color-on-primary-container)] dark:text-[color:var(--color-dark-on-primary-container)]">
                  <rect width="20" height="16" x="2" y="4" rx="2"/>
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                </svg>
              )}
              {link.icon === 'linkedin' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[color:var(--color-on-primary-container)] dark:text-[color:var(--color-dark-on-primary-container)]">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                  <rect width="4" height="12" x="2" y="9"/>
                  <circle cx="4" cy="4" r="2"/>
                </svg>
              )}
              {link.icon === 'github' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[color:var(--color-on-primary-container)] dark:text-[color:var(--color-dark-on-primary-container)]">
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
                  <path d="M9 18c-4.51 2-5-2-7-2"/>
                </svg>
              )}
              {link.icon === 'download' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[color:var(--color-on-primary-container)] dark:text-[color:var(--color-dark-on-primary-container)]">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                  <polyline points="7 10 12 15 17 10"/>
                  <line x1="12" x2="12" y1="15" y2="3"/>
                </svg>
              )}
            </span>
            <span class="text-[length:var(--font-size-body-lg)] font-medium text-[color:var(--color-on-surface)] dark:text-[color:var(--color-dark-on-surface)]">
              {link.label}
            </span>
            {link.external && (
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-auto shrink-0 text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]" aria-hidden="true">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                <polyline points="15 3 21 3 21 9"/>
                <line x1="10" x2="21" y1="14" y2="3"/>
              </svg>
            )}
            {link.download && (
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-auto shrink-0 text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]" aria-hidden="true">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" x2="12" y1="15" y2="3"/>
              </svg>
            )}
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>
