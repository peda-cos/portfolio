---
import { type Locale, t } from '../i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
---

<section id="about" class="section section-alt" aria-labelledby="about-heading">
  <div class="container max-w-[48rem]">
    <h2 id="about-heading" class="text-[length:var(--font-size-headline-lg)] font-bold text-[color:var(--color-on-surface)] dark:text-[color:var(--color-dark-on-surface)]">
      {i.about.heading}
    </h2>
    <div class="mt-[var(--spacing-xl)] space-y-[var(--spacing-lg)]">
      <p class="text-[length:var(--font-size-body-lg)] leading-relaxed text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
        {i.about.p1}
      </p>
      <p class="text-[length:var(--font-size-body-lg)] leading-relaxed text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
        {i.about.p2}
      </p>
    </div>

    <!-- Stats Bar -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-[var(--spacing-md)] mt-[var(--spacing-2xl)]">
      <!-- Years of Experience -->
      <div class="card flex flex-col items-start">
        <span class="text-[length:var(--font-size-display-sm)] font-bold text-[color:var(--color-primary)] dark:text-[color:var(--color-dark-primary)]">
          2+
        </span>
        <span class="text-[length:var(--font-size-label-lg)] font-medium text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
          {i.about.statsYears}
        </span>
      </div>

      <!-- Projects Completed -->
      <div class="card flex flex-col items-start">
        <span class="text-[length:var(--font-size-display-sm)] font-bold text-[color:var(--color-primary)] dark:text-[color:var(--color-dark-primary)]">
          21
        </span>
        <span class="text-[length:var(--font-size-label-lg)] font-medium text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
          {i.about.statsProjects}
        </span>
      </div>

      <!-- Technologies -->
      <div class="card flex flex-col items-start">
        <span class="text-[length:var(--font-size-display-sm)] font-bold text-[color:var(--color-primary)] dark:text-[color:var(--color-dark-primary)]">
          20+
        </span>
        <span class="text-[length:var(--font-size-label-lg)] font-medium text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
          {i.about.statsTechnologies}
        </span>
      </div>
    </div>
  </div>
</section>
