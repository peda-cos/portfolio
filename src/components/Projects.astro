---
import { type Locale, t } from '../i18n/index';
import { projects } from '../data/projects';
import ProjectFilter from './svelte/ProjectFilter.svelte';
import ScrollReveal from './svelte/ScrollReveal.svelte';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
---

<section id="projects" class="section" aria-labelledby="projects-heading">
  <div class="container">
    <h2 id="projects-heading" class="text-[length:var(--font-size-headline-lg)] font-bold text-[color:var(--color-on-surface)] dark:text-[color:var(--color-dark-on-surface)]">
      {i.projects.heading}
    </h2>
    <p class="mt-[var(--spacing-md)] max-w-[48rem] text-[length:var(--font-size-body-lg)] text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
      {i.projects.subtitle}
    </p>
    <div class="mt-[var(--spacing-2xl)]">
      <ScrollReveal client:visible>
        <ProjectFilter
          client:visible
          projects={projects}
          locale={locale}
          labels={{
            rank: i.projects.rank,
            grade: i.projects.grade,
            workload: i.projects.workload,
            hours: i.projects.hours,
            bonus: i.projects.bonus,
            filterAll: i.projects.filterAll,
            filterByRank: i.projects.filterByRank,
            gradeNote: i.projects.gradeNote,
          }}
        />
      </ScrollReveal>
    </div>
  </div>
</section>
