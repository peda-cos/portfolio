---
import { type Locale, t } from '../i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
---

<section class="section flex min-h-[calc(100vh-4rem)] items-center" style="padding-top: 4rem;" aria-labelledby="hero-heading">
  <div class="container">
    <p class="text-[length:var(--font-size-title-md)] font-medium text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
      {i.hero.greeting}
    </p>
    <h1 id="hero-heading" class="mt-[var(--spacing-sm)] text-[length:var(--font-size-display-md)] font-bold leading-tight text-[color:var(--color-on-surface)] dark:text-[color:var(--color-dark-on-surface)] sm:text-[length:var(--font-size-display-lg)]">
      {i.hero.title}
    </h1>
    <p class="mt-[var(--spacing-md)] max-w-[40rem] text-[length:var(--font-size-headline-sm)] font-normal text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)] sm:text-[length:var(--font-size-headline-md)]">
      {i.hero.subtitle}
    </p>
    <div class="mt-[var(--spacing-2xl)] flex flex-wrap gap-[var(--spacing-md)]">
      <a
        href="#contact"
        class="inline-flex items-center rounded-[var(--radius-xl)] bg-[var(--color-primary)] px-[var(--spacing-xl)] py-[var(--spacing-md)] text-[length:var(--font-size-label-lg)] font-semibold text-[color:var(--color-on-primary)] no-underline shadow-[var(--shadow-level1)] transition-[opacity,scale] duration-[var(--duration-fast)] hover:opacity-90 hover:scale-[1.02] active:scale-[0.98] dark:bg-[var(--color-dark-primary)] dark:text-[color:var(--color-dark-on-primary)]"
      >
        {i.hero.cta}
      </a>
      <a
        href="#projects"
        class="inline-flex items-center rounded-[var(--radius-xl)] border-2 border-[var(--color-outline)] px-[var(--spacing-xl)] py-[var(--spacing-md)] text-[length:var(--font-size-label-lg)] font-semibold text-[color:var(--color-on-surface)] no-underline transition-[opacity,scale] duration-[var(--duration-fast)] hover:opacity-80 hover:scale-[1.02] active:scale-[0.98] dark:border-[var(--color-dark-outline)] dark:text-[color:var(--color-dark-on-surface)]"
      >
        {i.hero.viewProjects}
      </a>
    </div>
  </div>
</section>
