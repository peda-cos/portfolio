---
import { type Locale, t } from '../i18n/index';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const i = t(locale);
const year = new Date().getFullYear();
---

<footer class="border-t border-[var(--color-outline-variant)] py-[var(--spacing-2xl)] dark:border-[var(--color-dark-outline-variant)]" role="contentinfo">
  <div class="container flex flex-col items-center gap-[var(--spacing-sm)] text-center text-[length:var(--font-size-body-sm)] text-[color:var(--color-on-surface-variant)] dark:text-[color:var(--color-dark-on-surface-variant)]">
    <p>{i.footer.builtWith}</p>
    <p>&copy; {year} Pedro Monteiro. {i.footer.rights}</p>
  </div>
</footer>
